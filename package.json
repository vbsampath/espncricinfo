{
  "name": "espncricinfo",
  "version": "1.0.0",
  "description": "A TypeScript library for Node.js to interact with ESPN Cricinfo",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "npm-run-all --parallel test:series test:summary test:player test:match",
    "test:series": "vitest run tests/series",
    "test:summary": "vitest run tests/summary",
    "test:player": "vitest run tests/player",
    "test:match": "vitest run tests/match",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vbsampath/espncricinfo.git"
  },
  "keywords": [
    "espncricinfo",
    "cricket",
    "typescript",
    "api",
    "nodejs",
    "library"
  ],
  "author": "Sampath Vangari <vbsampath@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vbsampath/espncricinfo/issues"
  },
  "homepage": "https://github.com/vbsampath/espncricinfo#readme",
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@vitest/coverage-v8": "^3.2.4",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "fast-xml-parser": "^5.3.0",
    "zod": "^4.1.12"
  }
}
